<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.marketdongnae.mapper.MemberMapper">  <!-- 이전 dao일 때: <mapper namespace="Test"> -->
 	<select id="loginID" resultType="com.marketdongnae.security.CustomUserDetails">	<!-- id는 Mapper 인터페이스에 정의된 메서드명과 동일하게 -->
		select * from member where m_id = #{m_id}
	</select>
	
 	<select id="regist" parameterType="com.marketdongnae.domain.member.MemberDTO">	 
		insert into member  ( m_id, m_pwd,  m_name ,  m_email, m_phone,  si_id )
		 values (#{m_id}, #{m_pwd} ,  #{m_name} , #{m_email}, #{m_phone}, #{si_id} ) ;
	</select>
	
	<select id="getDoList" resultType="com.marketdongnae.domain.member.Do_areaDTO">	 
		select * from Do_area;
	</select>
	
	<select id="getSiList" resultType="com.marketdongnae.domain.member.Si_areaDTO">	 
		select * from Si_area where do_id = #{do_id};
	</select>
 	
	<select id="getMember" resultType="com.marketdongnae.domain.member.MemberDTO">	 
		select * from member where m_id = #{m_id}
	</select>
	
	<select id="updateMember" parameterType="com.marketdongnae.domain.member.MemberDTO" > 
		update member
			set 
				m_name = #{m_name}, 
				m_phone=#{m_phone}, 
				si_id = #{si_id}
		where m_id = #{m_id}
	</select>
	
	<select id="getDealList" resultType="com.marketdongnae.domain.member.Deal_viewDTO">	 
		select * from deal_view where  m_number = #{m_number} ;
	</select>
	
	<select id="getSoldList" resultType="com.marketdongnae.domain.member.Deal_viewDTO">	 
		select * from deal_view where m_number = #{m_number} and d_type = 'sold'; 
	</select>
	
	<select id="getBuyList" resultType="com.marketdongnae.domain.member.Deal_viewDTO">	 
		select * from deal_view where m_number = #{m_number} and d_type = 'buy'; 
	</select>
	
	<select id="getOnSaleList" resultType="com.marketdongnae.domain.member.Deal_viewDTO">	 
		select * from deal_view where m_number = #{m_number} and d_type = 'onSale'; 
	</select>
	
	<select id="changePassword" parameterType="com.marketdongnae.domain.member.PasswordDTO" > 
		update member
			set m_pwd = #{new_password}
		where m_id = #{m_id}
	</select>
	
	<select id="getWish_viewList" resultType="com.marketdongnae.domain.member.Wish_viewDTO">	 
		select * from wish_view where m_number = #{m_number} ;
	</select>
	
	<select id="deleteWish" parameterType="com.marketdongnae.domain.member.Wish_viewDTO" > 
		delete from wishlist where wish_id = #{wish_id} ;
	</select>
	<select id="putPoint" parameterType="com.marketdongnae.domain.member.MemberDTO" > 
		update member
			set m_point = #{m_point}
		where m_id = #{m_id} ;
	</select>
	<!-- 
	 <select id="putPoint" parameterType="com.marketdongnae.domain.member.Point_viewDTO" > 
		insert into point
			set m_point = #{m_point}
		where m_id = #{m_id} ;
	</select>
	 -->
</mapper> 